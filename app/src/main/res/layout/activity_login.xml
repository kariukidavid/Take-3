<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LoginPage"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Welcome Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/LoginLayout"
        android:layout_margin="20dp"

        android:orientation="vertical"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="160dp"

            android:layout_height="160dp"

            android:src="@drawable/baseline_account_circle_24"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <!-- Subtitle Text -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your credential to login"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_below="@id/welcomeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <!-- Username Field -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:layout_below="@id/subtitleText"
            android:layout_marginTop="30dp"
            tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam,TextFields" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/edittext_background"

            android:padding="16dp"
            android:layout_below="@id/email"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Login"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape"
            android:layout_below="@id/password"
            android:layout_marginTop="30dp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <!-- Forgot Password Text -->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="14sp"
            android:textColor="#FF00FF"
            android:layout_below="@id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <!-- Signup Prompt -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/forgotPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="14sp"
                android:textColor="#888888"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textSize="14sp"
                android:textColor="#FF00FF"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>